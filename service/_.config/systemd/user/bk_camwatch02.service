[Unit]
Description=bk_camwatch02 - Send msg to channel

[Service]
Type=simple
WorkingDirectory=/home/lynx/.local/bin
ExecStart=/bin/sh /home/lynx/.local/bin/camwatch02 start
ExecStop=/bin/kill -HUP $MAINPID
# ExecStop=/bin/sh /home/lynx/.local/bin/camwatch02 stop
ExecReload=/bin/sh /home/lynx/.local/bin/camwatch02 restart
Restart=always
RestartSec=5s

[Install]
WantedBy=default.target